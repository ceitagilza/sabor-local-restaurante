		function recommend() {
  const selected = Array.from(document.querySelectorAll('input[name="mood"]:checked')).map(el => el.value);
  let target = "card1"; // padr√£o

  if (selected.includes("aventura")) target = "card3"; // Bacalhau √† Br√°s
  else if (selected.includes("tradi√ß√£o")) target = "card1"; // A√ßorda Jovem
  else if (selected.includes("vista")) target = "card5"; // Am√™ijoas √† Bulh√£o Pato
  else if (selected.includes("or√ßamento")) target = "card4"; // Caldo Verde

  const card = document.getElementById(target);
  if (card) {
    card.scrollIntoView({ behavior: "smooth", block: "center" });
    card.style.boxShadow = "0 0 10px 4px #ffd700"; // destaque visual
    setTimeout(() => card.style.boxShadow = "", 3000); // remove destaque ap√≥s 3s
  }
}
